using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Practika3_4
{
    internal class MyList
    {
        class MyIntList
        {
            private List<int> NL = new List<int>();
            public int Sum
            {
                get
                {
                    return VichSuma();
                }
            }
            public double Average
            {
                get
                {
                    return CalculateAverage();
                }
            }
            public void AddNumber(int number)
            {
                NL.Add(number);
            }
            public void RemoveNumber(int number)
            {
                NL.Remove(number);
            }
            private int VichSuma()
            {
                int sum = 0;
                foreach (int number in NL)
                {
                    sum += number;
                }
                return sum;
            }
            private double CalculateAverage()
            {
                return Sum / (double)NL.Count;
            }
        }
        static void Main(string[] args)
        {
            MyIntList numbers = new MyIntList();
            numbers.AddNumber(21);
            numbers.AddNumber(34);
            numbers.AddNumber(5);
            numbers.AddNumber(26);
            numbers.AddNumber(3);
            Console.WriteLine(numbers.Sum);
            Console.WriteLine(numbers.Average);
            Console.ReadKey(true);
        }
    }
}
